<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_entity_legal_form_form" model="ir.ui.view">
        <field name="name">entity.legal.form.view.form</field>
        <field name="model">entity.legal.form</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Entity Legal Forms">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="code" />
                        <field name="country_id" />
                        <field name="state_id" />
                        <field name="abbreviation_ids" />
                    </group>
                    <separator colspan="4" string="Notes" />
                    <field name="comment" colspan="4" nolabel="1" />
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_entity_legal_form_tree" model="ir.ui.view">
        <field name="name">entity.legal.form.view.tree</field>
        <field name="model">entity.legal.form</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
                <field name="country_id" />
                <field name="state_id" />
                <field name="abbreviation_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>
    <record id="action_entity_legal_form" model="ir.actions.act_window">
        <field name="name">Entity Legal Forms</field>
        <field name="res_model">entity.legal.form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        action="action_entity_legal_form"
        id="menu_partner_legal_entities"
        parent="contacts.res_partner_menu_config"
    />
</odoo>
